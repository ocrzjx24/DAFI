##> dafi:api/recommended
# sets a series of vanilla and dafi gamerules to the subjectively best experience
#
# callers:
# > dafi:api/main

gamerule commandBlockOutput false
gamerule disableElytraMovementCheck true
gamerule doFireTick false
gamerule doImmediateRespawn true
gamerule doInsomnia false
gamerule doMobLoot false
gamerule doMobSpawning false
gamerule fallDamage false
gamerule fireDamage false
gamerule keepInventory true
gamerule mobGriefing false
gamerule randomTickSpeed 0

scoreboard players set #universal dafi.antidrop 1
scoreboard players set #universal dafi.arrowdelay 30
scoreboard players set #universal dafi.arrownogravity 1
scoreboard players set #universal dafi.autospectate 0
scoreboard players set #universal dafi.dropdye 0
scoreboard players set #universal dafi.dropcompass 0
scoreboard players set #universal dafi.dropclock 0
scoreboard players set #universal dafi.dash 1
scoreboard players set #universal dafi.firework 0
scoreboard players set #universal dafi.pistonboost 1
scoreboard players set #universal dafi.regeneration 60
scoreboard players set #universal dafi.rocketjump 60
scoreboard players set #universal dafi.sprint 0